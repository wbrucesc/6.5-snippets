<h1 class="jumbotron">Welcome to Snippet Space</h1>

<div class="col-md-6">
  <div class="input-group">
    <input type="text" class="form-control" placeholder="Search for Snippet Title">
    <span class="input-group-btn">
       <button class="btn btn-default" type="button">Go!</button>
     </span>
  </div>
</div>

<a href="/add" class="btn btn-primary pull-right" id="add-button">Add a Snippet</a>
<br>
<hr>

<div class="container-fluid">
  <div class="row">
    <div class="side-bar col-md-4 pull-left">
      <h1>side</h1>
      <select class="custom-select">
        <option selected>Select Snippet Language</option>
          <option value="1">HTML</option>
          <option value="2">CSS</option>
          <option value="3">JavaScript</option>
      </select>
    </div>
    {{#each snippets}}
      <div class="snip col-md-8 pull-right well">
        <h2 class="well">{{title}}</h1>
          <h3>Language: {{language}}</h2>
        <h4>Snippet: {{body}}</h3>
          <h5>Notes: {{notes}}</h4>
        <h6>Tags: {{tags}}</h5>
          <h6>Created By: {{username}}</h6>
        <br>
        <a href="/{{_id}}/delete" class="btn btn-danger pull-right">Delete</a>
        <a href="/{{_id}}/edit" class="btn btn-primary pull-right">Edit</a>
      </div>
    {{/each}}
  </div>
</div>

<a href="/signOut">Sign Out</a>
